
@model List<EmployeeItemVM>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create</h6>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Employee">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>ImageUrl</th>
                        <th>Department</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><img src ="~/images/employees/@item.ImageUrl" width="70"/></td>
                            <td>@item.DepartmentId</td>
                            <td><a class="btn btn-success" asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id">Update</a></td>
                            <td><a class="btn btn-warning" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Delete</a></td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

